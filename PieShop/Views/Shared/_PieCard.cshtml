@model Pie


<div class="card m-2 shadow-sm" style="width: 18rem;">
    <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.ShortDescription</p>
        <p class="card-text fw-bold">@Model.Price $</p>
        <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId" class="btn btn-success">Add To Cart</a>
        <a asp-controller="pie" asp-action="details" asp-route-id="@Model.PieId" class="btn btn-primary">More Details</a>

    </div>
</div>