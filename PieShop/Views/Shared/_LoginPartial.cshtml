@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown ms-3 me-3">
        <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            Account
        </a>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
            <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
            <li>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button class="dropdown-item text-danger" type="submit">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    

    <a type="button" class="btn btn-primary ms-3" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a type="button" class="btn btn-success ms-1" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
}






